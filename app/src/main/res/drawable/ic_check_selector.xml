<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the button is pressed -->
    <item android:state_pressed="true" >
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FF0000FF"/> <!-- Blue color for pressed state background -->
                </shape>
            </item>
            <item android:drawable="@drawable/check_solid_pressed" />
        </layer-list>
    </item>
    <!-- Default state -->
    <item android:drawable="@drawable/check_solid" />
</selector>